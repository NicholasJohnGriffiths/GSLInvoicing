@model GSLInvoicing.Web.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<h1 class="h3 text-danger">Delete Client</h1>
<p>Are you sure you want to delete this client?</p>

<dl class="row mt-3">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">GST Code</dt>
    <dd class="col-sm-10">@Model.GSTCode</dd>
</dl>

<form asp-action="Delete" method="post">
    <input asp-for="Id" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-link">Back</a>
</form>
