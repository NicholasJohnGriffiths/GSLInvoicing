@model GSLInvoicing.Web.Models.Client

@{
    ViewData["Title"] = "Client Details";
}

<h1 class="h3">Client Details</h1>

<dl class="row mt-3">
    <dt class="col-sm-2">Card ID</dt>
    <dd class="col-sm-10">@Model.CardId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Contact</dt>
    <dd class="col-sm-10">@Model.Contact</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Street</dt>
    <dd class="col-sm-10">@Model.Street</dd>

    <dt class="col-sm-2">Suburb</dt>
    <dd class="col-sm-10">@Model.Suburb</dd>

    <dt class="col-sm-2">City</dt>
    <dd class="col-sm-10">@Model.City</dd>

    <dt class="col-sm-2">Postcode</dt>
    <dd class="col-sm-10">@Model.Postcode</dd>

    <dt class="col-sm-2">Country</dt>
    <dd class="col-sm-10">@Model.Country</dd>

    <dt class="col-sm-2">GST Code</dt>
    <dd class="col-sm-10">@Model.GSTCode</dd>

    <dt class="col-sm-2">Rate</dt>
    <dd class="col-sm-10">@Model.Rate.ToString("0.00")</dd>

    <dt class="col-sm-2">Created</dt>
    <dd class="col-sm-10">@Model.DateCreated</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-link">Back</a>
