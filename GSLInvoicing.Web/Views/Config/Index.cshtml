@model GSLInvoicing.Web.Models.Config

@{
    ViewData["Title"] = "Config";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Config</h1>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Last Invoice Number</th>
            <th>Last Card ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.LastInvoiceNumber</td>
            <td>@Model.LastCardId</td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Edit</a>
            </td>
        </tr>
    </tbody>
</table>
