@model GSLInvoicing.Web.Models.ViewModels.InvoiceCreateViewModel

@{
    ViewData["Title"] = "New Invoice";
}

<h1 class="h3">New Invoice</h1>

<form asp-action="Create" method="post" class="card card-body mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="ClientId" class="form-label">Client</label>
            <select asp-for="ClientId" asp-items="Model.Clients" class="form-select"></select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="InvoiceDate" class="form-label"></label>
            <input asp-for="InvoiceDate" type="date" class="form-control" />
            <span asp-validation-for="InvoiceDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PONumber" class="form-label"></label>
            <input asp-for="PONumber" class="form-control" />
            <span asp-validation-for="PONumber" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Contact" class="form-label"></label>
            <input asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create Invoice</button>
        <a asp-action="Index" class="btn btn-link">Back</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
