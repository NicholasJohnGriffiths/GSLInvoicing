@model GSLInvoicing.Web.Models.ViewModels.InvoiceEditViewModel

@{
    ViewData["Title"] = "Edit Invoice";
}

<h1 class="h3">Edit Invoice</h1>

<div class="alert alert-info">
    Client GST Code: <strong>@Model.ClientGstCode</strong> | GST Rate Applied To New Items: <strong>@Model.GstRatePercent.ToString("0")%</strong>
</div>

<form asp-action="Edit" method="post" class="card card-body mb-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="InvoiceNumber" class="form-label"></label>
            <input asp-for="InvoiceNumber" class="form-control" />
            <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="InvoiceDate" class="form-label"></label>
            <input asp-for="InvoiceDate" type="date" class="form-control" />
            <span asp-validation-for="InvoiceDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ClientId" class="form-label">Client</label>
            <select asp-for="ClientId" asp-items="Model.Clients" class="form-select"></select>
            <span asp-validation-for="ClientId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PONumber" class="form-label"></label>
            <input asp-for="PONumber" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Contact" class="form-label"></label>
            <input asp-for="Contact" class="form-control" />
        </div>
        <div class="col-md-12">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save Invoice</button>
        <a asp-action="Index" class="btn btn-link">Back</a>
    </div>
</form>

<h2 class="h5">Invoice Items</h2>
<table class="table table-sm table-bordered mb-4">
    <thead>
        <tr>
            <th>Description</th>
            <th class="text-end">Hours</th>
            <th class="text-end">Rate</th>
            <th class="text-end">Amount</th>
            <th class="text-end">GST</th>
            <th class="text-end">Total</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Items.Count == 0)
    {
        <tr>
            <td colspan="6" class="text-center text-muted">No items yet.</td>
        </tr>
    }
    else
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Description</td>
                <td class="text-end">@item.Hours.ToString("0.##")</td>
                <td class="text-end">@item.Rate.ToString("C2")</td>
                <td class="text-end">@item.Amount.ToString("C2")</td>
                <td class="text-end">@item.GST.ToString("C2")</td>
                <td class="text-end">@item.Total.ToString("C2")</td>
            </tr>
        }
    }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="5" class="text-end">Invoice Total</th>
            <th class="text-end">@Model.Items.Sum(i => i.Total).ToString("C2")</th>
        </tr>
    </tfoot>
</table>

<h2 class="h5">Add Invoice Item</h2>
@if (TempData["InvoiceItemError"] is string errorMessage)
{
    <div class="alert alert-danger">@errorMessage</div>
}

<form asp-action="AddItem" asp-route-id="@Model.Id" method="post" class="card card-body">
    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="NewItem.Hours" class="form-label"></label>
            <input asp-for="NewItem.Hours" class="form-control" />
            <span asp-validation-for="NewItem.Hours" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="NewItem.Rate" class="form-label"></label>
            <input asp-for="NewItem.Rate" class="form-control" />
            <span asp-validation-for="NewItem.Rate" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="NewItem.Description" class="form-label"></label>
            <input asp-for="NewItem.Description" class="form-control" />
            <span asp-validation-for="NewItem.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Add Item</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
