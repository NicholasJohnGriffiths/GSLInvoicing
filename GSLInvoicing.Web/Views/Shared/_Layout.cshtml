<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GSL Invoicing</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GSLInvoicing.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-body-tertiary">
    @{
        var hideMenu = Context.Request.Path.StartsWithSegments("/Account/Login");
        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();
        var isDataPage = controller is "Clients" or "Invoices" or "Config";
        var useFluidContainer = controller == "Clients" && action == "Index";
    }
    @if (!hideMenu)
    {
        <header class="sticky-top">
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">GSL Invoicing</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse justify-content-between">
                        <ul class="navbar-nav gap-lg-1">
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded-2" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded-2" asp-area="" asp-controller="Invoices" asp-action="Index">Invoices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link px-3 rounded-2" asp-area="" asp-controller="Config" asp-action="Index">Config</a>
                            </li>
                        </ul>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-muted small d-none d-md-inline">@User.Identity!.Name</span>
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Logout</button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="@(useFluidContainer ? "container-fluid py-4 px-4" : "container py-4")">
        <main role="main" class="pb-3 @(isDataPage ? "data-page" : string.Empty)">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-white">
        <div class="container">
            &copy; 2026 - GSL Invoicing
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
